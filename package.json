{
  "name": "root",
  "private": true,
  "engines": {
    "pnpm": ">= 8"
  },
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "test": "lerna run test",
    "version": "lerna version --no-push"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lerna": "^8.1.7",
    "lint-staged": "^15.2.8",
    "only-allow": "^1.2.1",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint"
    ],
    "**/*": [
      "prettier --check"
    ]
  }
}
