{
  "name": "root",
  "private": true,
  "scripts": {
    "lint:es": "eslint '**/*.js'",
    "lint:es:fix": "npm run lint:es -- --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "npm run lint:es; npm run prettier",
    "lint:fix": "npm run lint:es:fix; npm run prettier:fix",
    "test": "lerna run test",
    "prepare": "[ $CI ] || husky install",
    "version": "lerna version --no-push"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lerna": "^6.5.1",
    "lint-staged": "^13.1.2",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint"
    ],
    "**/*": [
      "prettier --check"
    ]
  }
}
