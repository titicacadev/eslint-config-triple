{
  "name": "root",
  "private": true,
  "engines": {
    "pnpm": ">= 8"
  },
  "scripts": {
    "prepare": "[ $CI ] || husky install",
    "preinstall": "npx only-allow pnpm",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "test": "lerna run test",
    "version": "lerna version --no-push"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lerna": "^7.1.1",
    "lint-staged": "^13.1.2",
    "only-allow": "^1.1.1",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint"
    ],
    "**/*": [
      "prettier --check"
    ]
  }
}
