{
  "name": "@titicaca/stylelint-config-triple",
  "version": "1.2.1",
  "description": "Triple's Stylelint config, following our styleguide.",
  "license": "MIT",
  "main": "stylelint.js",
  "files": [
    "*.js"
  ],
  "homepage": "https://github.com/titicacadev/triple-config-kit",
  "bugs": {
    "url": "https://github.com/titicacadev/triple-config-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/titicacadev/triple-config-kit.git",
    "directory": "packages/stylelint-config-triple"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "npm run lint:es; npm run prettier",
    "lint:fix": "npm run lint:es:fix; npm run prettier:fix",
    "lint:es": "eslint '**/*.js'",
    "lint:es:fix": "eslint '**/*.js' --fix",
    "prettier": "prettier '**/*' --check",
    "prettier:fix": "prettier '**/*' --write"
  },
  "dependencies": {
    "postcss-styled-syntax": "^0.6.4",
    "stylelint-config-recommended": "^13.0.0"
  },
  "devDependencies": {
    "stylelint": "^15.11.0"
  },
  "peerDependencies": {
    "stylelint": "^15.10.0"
  }
}
